<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WPF_Icons;assembly=WPF-Icons">
    <Geometry x:Key="play_pause_outline_rounded">
        M10 31.4V16.6L21 24Zm17 .6V16h3v16Zm8 0V16h3v16Z
    </Geometry>
    <Geometry x:Key="play_pause_filled_rounded">
        M10 31.4V16.6L21 24Zm17 .6V16h3v16Zm8 0V16h3v16Z
    </Geometry>
    <Geometry x:Key="play_pause_outline_sharp">
        M10 31.4V16.6L21 24Zm17 .6V16h3v16Zm8 0V16h3v16Z
    </Geometry>
    <Geometry x:Key="play_pause_filled_sharp">
        M10 31.4V16.6L21 24Zm17 .6V16h3v16Zm8 0V16h3v16Z
    </Geometry>
    <Style x:Key="play_pause"
           TargetType="controls:Icon"
           BasedOn="{StaticResource {x:Type controls:Icon}}">
        <Setter Property="RoundedFilledGeometry"
                Value="{StaticResource play_pause_filled_rounded}" />
        <Setter Property="RoundedOutlineGeometry"
                Value="{StaticResource play_pause_outline_rounded}" />
        <Setter Property="SharpFilledGeometry"
                Value="{StaticResource play_pause_filled_sharp}" />
        <Setter Property="SharpOutlineGeometry"
                Value="{StaticResource play_pause_outline_sharp}" />
    </Style>

</ResourceDictionary>